// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

// User model for authentication
model User {
  id            String    @id @default(cuid())
  name          String?
  email         String    @unique
  emailVerified DateTime?
  image         String?
  password      String
  role          Role      @default(STUDENT)
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt
  
  accounts      Account[]
  sessions      Session[]
  student       Student?
  officer       Officer?
}

model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String?
  access_token      String?
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String?
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}

enum Role {
  STUDENT
  OFFICER
  ADMIN
}

// Student profile
model Student {
  id                String            @id @default(cuid())
  userId            String?           @unique
  name              String
  email             String            @unique
  rollNumber        String            @unique
  department        String?
  degree            String?
  address           String?
  interests         String?           // JSON array of interests
  phoneNumber       String?
  cgpa              Float?
  branch            String?
  overallScore      Int               @default(0)
  resumeScore       Int               @default(0)
  aptitudeScore     Int               @default(0)
  softSkillsScore   Int               @default(0)
  interviewScore    Int               @default(0)
  isRegistered      Boolean           @default(false)
  createdAt         DateTime          @default(now())
  updatedAt         DateTime          @updatedAt

  user              User?             @relation(fields: [userId], references: [id], onDelete: Cascade)
  progressData      ProgressData[]
  testResults       TestResult[]
  resumeAnalyses    ResumeAnalysis[]
  companyMatches    CompanyMatch[]
  softSkillsResults SoftSkillsResult[]
  recommendations   Recommendation[]
  roadmaps          Roadmap[]
}

// Progress tracking over time
model ProgressData {
  id              String   @id @default(cuid())
  studentId       String
  week            String
  date            DateTime
  overall         Int
  resume          Int
  aptitude        Int
  softSkills      Int
  createdAt       DateTime @default(now())

  student         Student  @relation(fields: [studentId], references: [id], onDelete: Cascade)
}

// Aptitude test questions
model Question {
  id              String   @id @default(cuid())
  question        String
  options         String   // JSON array
  correctAnswer   Int
  category        String   // quantitative, logical, verbal
  difficulty      String?  @default("medium")
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt
}

// Test results
model TestResult {
  id              String   @id @default(cuid())
  studentId       String
  score           Int
  correctAnswers  Int
  totalQuestions  Int
  answers         String   // JSON object of question_id: selected_answer
  feedback        String   // JSON array
  testDate        DateTime @default(now())

  student         Student  @relation(fields: [studentId], references: [id], onDelete: Cascade)
}

// Resume analysis results
model ResumeAnalysis {
  id              String   @id @default(cuid())
  studentId       String
  fileName        String
  fileUrl         String?
  score           Int
  strengths       String   // JSON array
  improvements    String   // JSON array
  recommendations String   // JSON array
  analysisDate    DateTime @default(now())

  student         Student  @relation(fields: [studentId], references: [id], onDelete: Cascade)
}

// Company requirements
model Company {
  id                  String          @id @default(cuid())
  name                String          @unique
  minOverallScore     Int
  minAptitudeScore    Int
  requiredSkills      String          // JSON array
  minCgpa             Float
  description         String?
  website             String?
  active              Boolean         @default(true)
  createdAt           DateTime        @default(now())
  updatedAt           DateTime        @updatedAt

  companyMatches      CompanyMatch[]
}

// Company-Student matching
model CompanyMatch {
  id                String   @id @default(cuid())
  studentId         String
  companyId         String
  eligible          Boolean
  matchPercentage   Int
  createdAt         DateTime @default(now())

  student           Student  @relation(fields: [studentId], references: [id], onDelete: Cascade)
  company           Company  @relation(fields: [companyId], references: [id], onDelete: Cascade)

  @@unique([studentId, companyId])
}

// Officer profile
model Officer {
  id          String   @id @default(cuid())
  userId      String   @unique
  name        String
  email       String   @unique
  department  String?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  user        User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  seminars    Seminar[]
}

// Training seminars
model Seminar {
  id            String   @id @default(cuid())
  title         String
  description   String?
  targetArea    String   // Resume, Aptitude, Soft Skills, etc.
  duration      String
  scheduledDate DateTime?
  createdBy     String
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt

  officer       Officer  @relation(fields: [createdBy], references: [id])
}

// Soft Skills Questions
model SoftSkillsQuestion {
  id            String   @id @default(cuid())
  question      String
  options       String   // JSON array
  correctAnswer Int
  category      String   // Communication, Leadership, Teamwork, etc.
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt
}

// Soft Skills Test Results
model SoftSkillsResult {
  id              String   @id @default(cuid())
  studentId       String
  score           Int
  correctAnswers  Int
  totalQuestions  Int
  answers         String   // JSON object
  feedback        String   // JSON array
  categoryScores  String?  // JSON object of category-wise scores
  testDate        DateTime @default(now())

  student         Student  @relation(fields: [studentId], references: [id], onDelete: Cascade)
}

// Recommendations
model Recommendation {
  id            String   @id @default(cuid())
  studentId     String
  type          String   // Resume, Aptitude, Soft Skills, Interview, Overall
  title         String
  description   String
  priority      String   @default("medium") // high, medium, low
  isCompleted   Boolean  @default(false)
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt

  student       Student  @relation(fields: [studentId], references: [id], onDelete: Cascade)
}

// Roadmap
model Roadmap {
  id            String   @id @default(cuid())
  studentId     String
  title         String
  weekNumber    Int
  tasks         String   // JSON array of tasks
  status        String   @default("pending") // pending, in-progress, completed
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt

  student       Student  @relation(fields: [studentId], references: [id], onDelete: Cascade)
}
